@model ModelAPI.Cart

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Cart</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
<div class="container">
    <h1>Delete Cart</h1>
    <div>
        <strong>ID:</strong> @Model.CartId
    </div>
    <div>
        <strong>Customer ID:</strong> @Model.CustomerId
    </div>
    <div>
        <strong>Created At:</strong> @Model.CreatedAt
    </div>
    <form method="post" asp-action="Delete" asp-route-id="@Model.CartId">
        @Html.AntiForgeryToken()
        <button type="submit">Delete</button>
    </form>
    <a href="/Cart">Back to List</a>
</div>
</body>
</html>
