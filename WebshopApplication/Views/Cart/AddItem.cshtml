@model ModelAPI.Cart

@{
    ViewData["Title"] = "Add Item to Cart";
}

<h1>Add Item to Cart</h1>

<form method="post" asp-action="AddItem">
    <div class="form-group">
        <label for="ProductId">Product</label>
        <input type="number" class="form-control" id="ProductId" name="ProductId" required />
    </div>
    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" value="1" required />
    </div>
    <button type="submit" class="btn btn-primary">Add Item</button>
</form>