@model ModelAPI.Cart

@{
    ViewData["Title"] = "Cart Details";
}

<h1>Cart Details</h1>

@if (Model != null && Model.Items.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Product.ProductPrice.ToString("C")</td>
                <td>@(item.Product.ProductPrice * item.Quantity).ToString("C")</td>
                <td>
                    <form method="post" asp-action="RemoveItem" asp-route-productId="@item.Product.ProductId">
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <h3>Total: @Model.CalculateTotal().ToString("C")</h3>
}
else
{
    <p>Your cart is empty.</p>
}