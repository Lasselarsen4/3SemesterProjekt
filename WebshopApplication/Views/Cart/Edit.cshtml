@model ModelAPI.Cart

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Cart</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
<div class="container">
    <h1>Edit Cart</h1>
    <form method="post" asp-action="Edit">
        @Html.AntiForgeryToken()
        <div>
            <input type="hidden" id="CartId" name="CartId" value="@Model.CartId">
        </div>
        <div>
            <label for="CustomerId">Customer ID:</label>
            <input type="number" id="CustomerId" name="CustomerId" value="@Model.CustomerId" required>
        </div>
        <div>
            <label for="CreatedAt">Created At:</label>
            <input type="datetime" id="CreatedAt" name="CreatedAt" value="@Model.CreatedAt" required>
        </div>
        <button type="submit">Save Changes</button>
    </form>
    <a href="/Cart">Back to List</a>
</div>
</body>
</html>