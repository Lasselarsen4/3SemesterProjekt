@model WebshopApplication.Models.CheckoutViewModel

<h2>Checkout</h2>

<form asp-action="Checkout" method="post">
    <input type="hidden" name="CartIndex" value="@Model.CartIndex" />
    <div>
        <label for="FirstName">First Name</label>
        <input type="text" name="FirstName" value="@Model.FirstName" />
    </div>
    <div>
        <label for="LastName">Last Name</label>
        <input type="text" name="LastName" value="@Model.LastName" />
    </div>
    <div>
        <label for="Email">Email</label>
        <input type="email" name="Email" value="@Model.Email" />
    </div>
    <div>
        <label for="Address">Address</label>
        <input type="text" name="Address" value="@Model.Address" />
    </div>
    <div>
        <label for="City">City</label>
        <input type="text" name="City" value="@Model.City" />
    </div>
    <div>
        <label for="State">State</label>
        <input type="text" name="State" value="@Model.State" />
    </div>
    <div>
        <label for="ZipCode">Zip Code</label>
        <input type="text" name="ZipCode" value="@Model.ZipCode" />
    </div>
    <button type="submit">Place Order</button>
</form>