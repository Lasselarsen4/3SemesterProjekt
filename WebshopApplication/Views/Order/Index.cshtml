@model IEnumerable<WebshopApplication.Models.Order>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<table class="table">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Order Date</th>
        <th>Total Price</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@order.OrderDate</td>
            <td>@order.TotalPrice</td>
            <td>
                <a href="@Url.Action("Details", "Order", new { id = order.OrderId })" class="btn btn-info">View Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>