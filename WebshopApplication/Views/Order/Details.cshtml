@model WebshopApplication.Models.Order

@{
    ViewBag.Title = "Order Details";
}

<h2>Order Details</h2>

@if (Model != null)
{
    <div>
        <h3>Order Information</h3>
        <p>Order ID: @Model.OrderId</p>
        <p>Order Date: @Model.OrderDate.ToString("MM/dd/yyyy")</p>
        <p>Delivery Date: @Model.DeliveryDate.ToString("MM/dd/yyyy")</p>
        <p>Total Price: @Model.TotalPrice</p>
    </div>

    <div>
        <h3>Customer Information</h3>
        @if (Model.Cust != null)
        {
            <p>Name: @Model.Cust.FirstName @Model.Cust.LastName</p>
            <p>Email: @Model.Cust.Email</p>
            <p>Phone: @Model.Cust.Phone</p>
            <p>Address: @Model.Cust.StreetName @Model.Cust.HouseNumber, @Model.Cust.ZipCode</p>
        }
        else
        {
            <p>No customer information available.</p>
        }
    </div>

    <div>
        <h3>Order Lines</h3>
        @if (Model.OrderLines != null && Model.OrderLines.Any())
        {
            <table class="table">
                <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Description</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var line in Model.OrderLines)
                {
                    <tr>
                        <td>@line.Product.ProductName</td>
                        <td>@line.Quantity</td>
                        <td>@line.Product.ProductPrice</td>
                        <td>@line.Product.ProductDescription</td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p>No order lines available.</p>
            <p>Debug: OrderLines Count: @Model.OrderLines?.Count</p>
        }
    </div>
}
else
{
    <p>Order details not available.</p>
}