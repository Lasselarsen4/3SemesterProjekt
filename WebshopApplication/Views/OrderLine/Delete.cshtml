@model ModelAPI.OrderLine

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Order Line</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
<div class="container">
    <h1>Delete Order Line</h1>
    <div>
        <strong>Order ID:</strong> @Model.OrderId
    </div>
    <div>
        <strong>Product ID:</strong> @Model.ProductId
    </div>
    <div>
        <strong>Quantity:</strong> @Model.Quantity
    </div>
    <form method="post" asp-action="Delete" asp-route-orderId="@Model.OrderId" asp-route-productId="@Model.ProductId">
        @Html.AntiForgeryToken()
        <button type="submit">Delete</button>
    </form>
    <a href="/OrderLine">Back to List</a>
</div>
</body>
</html>
